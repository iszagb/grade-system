<p style="color: green"><%= notice %></p>

<div class="card ms-auto me-auto " style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%=@student.full_name%></h5>
    <%= link_to "Edit this student", edit_student_path(@student), class: 'd-block' %>
    <%= link_to 'View Grades', grades_student_path(@student), class: 'd-block' %>
    <%= link_to "Back to students", students_path, class: 'd-block' %>

  <%= button_to "Destroy this student", @student, method: :delete, class: 'btn btn-danger mt-1' %>
  </div>
</div>
